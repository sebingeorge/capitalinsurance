@model List<Capital.Domain.SalesManager>
@{
    ViewBag.Title = "Index";
}
<script>
    function Create() {
        var url = '@Url.Action("Create")';
        location.href = url;
    }
    function Exit() {
        var url = '@Url.Action("Index","Home")';
        location.href = url;
    }
    function Filter() {
        $("#Emp_list").addClass("fade");

        var Employee = $("#emp").val().trim();
        var url = '@Url.Action("SalesManagerList")';
        url += "?Employee=" + encodeURIComponent(Employee);
        $("#Emp_list").load(url, function () {
            $("#Emp_list").removeClass("fade");
        });
    }
    $(document).ready(function () {


        toastr.options = {
            "closeButton": true,
            "positionClass": "toast-bottom-full-width",
            "preventDuplicates": false,
            "onclick": null,

            "timeOut": "0",
            "extendedTimeOut": "1000",
            "showEasing": "swing",
            "hideEasing": "linear",
            "showMethod": "fadeIn",
            "hideMethod": "fadeOut"
        }
        if ('@TempData["success"]' != "") {
            toastr.success('@TempData["success"]');
        }
        else if ('@TempData["error"]' != "") {
            toastr.error('@TempData["error"]');
        }
    });


</script>
<div class="container content-in">
    <div class="row">
        <h1>Employee Details List</h1>
    </div>
    <div class="row">
        @*<div class="col-md-2">
            <div class="row">
                <div class="col-md-6">
                    <label>From</label>
                    <input type="text" class="form_input" />
                </div>
                <div class="col-md-6">
                    <label>To</label>
                    <input type="text" class="form_input" />
                </div>
            </div>
        </div>*@
        <div class="col-md-4">
            <div class="row">
                <div class="col-md-6">
                    <label>Employee</label>
                    <input id="emp" class="form_input" placeholder="Search for Employee" onkeyup="Filter()" />
                </div>
            </div>
        </div>
    </div>
    <br />
    <div id="Emp_list">
        @Html.Action("SalesManagerList")
    </div>
    <div class="row">
        <hr />
        <div class="col-md-offset-8 col-md-4">
            <button type="button" class="form-button right" onclick="Exit()">Exit</button>
            <button type="button" class="form-button right" onclick="Create()">Create</button>
           
        </div>
    </div>
</div>
