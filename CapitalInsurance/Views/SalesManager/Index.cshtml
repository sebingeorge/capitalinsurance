@model List<Capital.Domain.SalesManager>
@{
    ViewBag.Title = "Index";
}

<div class="container content-in">
    <div class="row">
        <h1>Sales Manager List</h1>
    </div>
    <div class="row">
        <div class="col-md-3">
            <div class="row">
                <div class="col-md-12">
                    <label>Sales Manager Name</label>
                    <input type="text" class="form_input" />
                </div>
            </div>
        </div>
    </div>
    <hr />
    @Html.Partial("_SalesManagerGrid", Model)
  
    <div class="row">
        <hr />
        <div class="col-md-offset-8 col-md-4">
            <button type="button" class="form-button right" onclick="Create()">Add</button>
            <button type="button" class="form-button right" onclick="Exit()">Exit</button>
        </div>
    </div>
</div>
