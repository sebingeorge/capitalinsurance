@model Capital.Domain.SalesManager
@{
    ViewBag.Title = "Employee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{string actionName = HttpContext.Current.Request.RequestContext.RouteData.Values["action"].ToString(); }
@*<link href="~/Content/bootstrap-datepicker3.min.css" rel="stylesheet" />*@
<script src="~/Scripts/bootstrap-datepicker.min.js"></script>
@*<script type="text/javascript" src="~/scripts/jquery-3.1.1.min.js"></script>*@
<script type="text/javascript" src="~/scripts/moment.min.js"></script>
<script type="text/javascript" src="~/scripts/bootstrap.min.js"></script>
<script type="text/javascript" src="~/scripts/bootstrap-datetimepicker.js"></script>
<script type="text/javascript" src="~/scripts/bootstrap-datetimepicker.min.js"></script>
<div class="container content-in">
    <div class="row">
        <h1>Employee Details</h1>
    </div>
    @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "createFrom", @id = "box_form" }))
    {
        @Html.Partial("_Form")
        <div class="row">
            <hr />
            <div class="col-md-12">
                <button type="button" class="form-button" onclick="Previous()">Previous</button>
                @if (actionName == "Edit")
                {
                    <button type="submit" class="form-button right">Update</button>
                }
                else if (actionName == "Delete")
                {
                    <button type="submit" class="form-button right">Delete</button>
                }
                else
                {
                    <button type="submit" class="form-button right">Save</button>
                }

                <button type="button" class="form-button right" onclick="Exit()">Exit</button>
            </div>
        </div>
    }
</div>

<script>
    function Previous() {
        var url = '@Url.Action("Index", "SalesManager")'
        window.location = url;
    }
    function Exit() {
        var url = '@Url.Action("Index", "Home")';
        location.href = url;
    }

</script>
<script>
    $(function () {
        $("#DateOfJoining").datepicker({ dateFormat: "dd-MMM-yyyy" });
        $("#DateOfBirth").datepicker({ dateFormat: "dd-MM-yy" });
        $("#PassportIssueDate").datepicker({ dateFormat: "dd-MM-yy" });
        $("#PassportEndDate").datepicker({ dateFormat: "dd-MM-yy" });
        $("#VisaIssueDate").datepicker({ dateFormat: "dd-MM-yy" });
        $("#VisaEndDate").datepicker({ dateFormat: "dd-MM-yy" });
    });
</script>


