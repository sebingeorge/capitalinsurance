<div class="table-responsive scroll3">
    @Html.Grid(Model).Columns(columns =>
    {
        columns.Add(m => m.Month).Titled("Month").SetWidth(12).Sanitized(false).Encoded(false).RenderValueAs(Model => Html.ActionLink(Model.Month, "PolicyDetailsPopup", new { id = Model.MonthCode}).ToHtmlString());
        columns.Add(m => m.CountofExpired).Titled("For Renewal").SetWidth(5).Css("text-right");
        columns.Add(m => m.CountofRenewed).Titled("Renewed").SetWidth(10).Css("text-right");
       
    }).WithPaging(15)
</div>
