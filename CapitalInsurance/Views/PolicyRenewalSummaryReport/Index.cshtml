
@{
    ViewBag.Title = "Index";
}
<script>
    function Exit() {
        var url = '@Url.Action("Index","Home")';
        window.location = url;
    }
    function Filter() {
        $("#Ageing_Summary").addClass("fade");

        var Client = $("#client").val().trim();

        var url = '@Url.Action("AgeingSummary")';
        url += "?Client=" + encodeURIComponent(Client);
        $("#Ageing_Summary").load(url, function () {
            $("#Ageing_Summary").removeClass("fade");
        });
    }
</script>
<div class="container content-in">
