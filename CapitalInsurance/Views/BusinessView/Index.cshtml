
@model List<Capital.Domain.PolicyIssue>
@{
    ViewBag.Title = "Index";
}

<script type="text/javascript">
      function Exit() {
        var url = '@Url.Action("Index","Home")';
        window.location = url;
      }
    function Filter() {
        $("#Bussiness_View").addClass("fade");
        var Cmpy = $("#compy").val().trim();
        var Prod = $("#product").val().trim();
        var Client = $("#client").val().trim();
        var SalesManager = $("#salesmanager").val().trim();
        var url = '@Url.Action("BusinessViewDetails")';
        url += "?Company=" + encodeURIComponent(Cmpy) + "&Product=" + encodeURIComponent(Prod) + "&Client=" + encodeURIComponent(Client) + "&SalesManager=" + encodeURIComponent(SalesManager);
        $("#Bussiness_View").load(url, function () {
        $("#Bussiness_View").removeClass("fade");
        });
    }
</script>


<div class="container content-in">
    <div class="row">
        <h1>Business View</h1>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="row">
                <div class="col-md-6">
                    <label>Company</label>
                    <input id="compy" class="form_input" placeholder="Search for Company" onkeyup="Filter()" />
                </div>
                <div class="col-md-6">
                    <label>Product</label>
                    <input id="product" class="form_input" placeholder="Search for Product" onkeyup="Filter()" />
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="row">
                <div class="col-md-6">
                    <label>Client</label>
                    <input id="client" class="form_input" placeholder="Search for Client" onkeyup="Filter()" />
                </div>
                <div class="col-md-6">
                    <label>Sales Manager</label>
                    <input id="salesmanager" class="form_input" placeholder="Search for Sales Manager" onkeyup="Filter()" />
                </div>
            </div>
        </div>
    </div>
    <hr />
    <div id="Bussiness_View">
        @Html.Action("BusinessViewDetails")
       </div>
       <div class="row">
        <hr />
        <div class="col-md-12 hrpart">
            @*<input type="button" class="form-button" onclick="Previous()" value="Previous" title="Previous Policy Renewal">*@
            <input type="button" class=" form-button right" onclick="Exit()" value="Exit" />
        </div>
    </div>
</div>

