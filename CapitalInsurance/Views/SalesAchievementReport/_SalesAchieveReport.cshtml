                <th width="5%">Code</th>
                <th width="15%">Employee Name</th>
                <th width="20%" class="span">
                    <table class="table table-bordered" id="tab_logic">
                        <thead>
                            <tr><th colspan="4"><center>Quarter 1</center></th></tr>
                            <tr><th>Target</th><th>Achived</th><th>Achv.%</th><th>SF</th></tr>
                        </thead>
                    </table>

                </th>
                <th width="20%" class="span">
                    <table class="table table-bordered" id="tab_logic">
