                            <tr><th colspan="4"><center>Quarter 3</center></th></tr>
                            <tr><th>Target</th><th>Achived</th><th>Achv.%</th><th>SF</th></tr>
                        </thead>
                    </table>

                </th>
                <th width="20%" class="span">
                    <table class="table table-bordered" id="tab_logic">
                        <thead>
                            <tr><th colspan="4"><center>Quarter 4</center></th></tr>
                            <tr><th>Target</th><th>Achived</th><th>Achv.%</th><th>SF</th></tr>
                        </thead>
                    </table>

                </th>



        </thead>
        <tbody>
     
            @foreach (var item in Model)
              {
            <tr>

                <td>@item.SalesMgCode</td>
                <td>@item.SalesMgName</td>
