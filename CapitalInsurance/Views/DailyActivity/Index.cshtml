@model Capital.Domain.DailyActivity
@{
    ViewBag.Title = "Index";
}
<script>
    function Exit() {
        var url = '@Url.Action("Index","Home")';
        location.href = url;
    }
    function Filter(sender) {
        var id = $(sender).val();
        var url = '@Url.Action("DailyActivityReport")';
        $("#Daily_Act").load(url, { EmpId: id });
    }

</script>
<div class="container content-in">
    <div class="row">
        <h1>Daily Activity Report</h1>
    </div>
    @using (Html.BeginForm("Create", null, FormMethod.Post, new { @class = "createFrom", @id = "box_form", @onsubmit = "return Validation()" }))
    {
        <div class="row">
            <div class="col-md-4">
                <div class="row">
                    <div class="col-md-6">
                        <label>Employee</label>
                        @Html.DropDownListFor(m => Model.SalesMgId, (SelectList)ViewBag.SalesManager, "Select Sales Manager", new { @class = "form_input", autocomplete = "off", @onchange = "Filter(this)" })
                    </div>
                </div>
            </div>
        </div>
        <br />
        <div id="Daily_Act">
            @Html.Action("DailyActivityReport")
        </div>
        <div class="row">
            <hr />
            <div class="col-md-12 hrpart">
               
                <button type="button" class="form-button right" onclick="Exit()">Exit</button>
              
            </div>
        </div>
    }
</div>

