
@{
    ViewBag.Title = "Endorsement";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container content-in">
    <div class="row">
        <h1>Policy Endorsement</h1>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="row form-group">
                <div class="col-md-3">
                    <label>Transaction No</label>
                    <input type="text" class="form_input half" />
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-3">
            <div class="row form-group">
                <div class="col-md-12">
                    <label>Client Name</label>
                    <select class="form_input">
                        <option value="">Client 1</option>
                        <option value="">Client 2</option>
                    </select>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="row form-group">
                <div class="col-md-12">
                    <label>Address 1</label>
                    <input type="text" class="form_input" />
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="row form-group">
                <div class="col-md-12">
                    <label>Address 2</label>
                    <input type="text" class="form_input" />
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="row form-group">
                <div class="col-md-12">
                    <label>Address 3</label>
                    <input type="text" class="form_input" />
                </div>
            </div>
        </div>
    </div>
    <hr />
    <h2>Insurance Details</h2>
    <div class="row">
        <div class="col-md-3">
            <div class="row form-group">
                <div class="col-md-6">
                    <label>CIB Effective Date</label>
                    <input type="text" class="form_input" />
                </div>
                <div class="col-md-6">
                    <label>Endorsement Date</label>
                    <input type="text" class="form_input" />
                </div>

                <div class="col-md-6">
                    <label>Addition No. Emp.</label>
                    <input type="text" class="form_input" />
                </div>

                <div class="col-md-6">
                    <label>Deletion No. Emp.</label>
                    <input type="text" class="form_input" />
                </div>


            </div>
        </div>

        <div class="col-md-3">
            <div class="row form-group">
                <div class="col-md-12">
                    <label>Insurance Company</label>
                    <select class="form_input">
                        <option value="">Insurance Company 1</option>
                        <option value="">Insurance Company 2</option>
                    </select>
                </div>


                <div class="col-md-6">
                    <label>Type of Insurance</label>
                    <select class="form_input">
                        <option value="">Insurance 1</option>
                        <option value="">Insurance 2</option>
                    </select>
                </div>

                <div class="col-md-6">
                    <label>Endorsement type</label>
                    <select class="form_input">
                        <option value="">Endorsement Type 1</option>
                        <option value="">Endorsement Type 2</option>
                    </select>
                </div>




            </div>
        </div>

        <div class="col-md-3">
            <div class="row form-group">
                <div class="col-md-6">
                    <label>Premium Amount</label>
                    <input type="text" class="form_input" />
                </div>
                <div class="col-md-6">
                    <label>Policy Fees</label>
                    <input type="text" class="form_input" />
                </div>


                <div class="col-md-6">
                    <label>Commi. Percentage</label>
                    <input type="text" class="form_input" />
                </div>

                <div class="col-md-6">
                    <label>Commi. Amount</label>
                    <input type="text" class="form_input" />
                </div>

            </div>
        </div>
        <div class="col-md-3">
            <div class="row form-group">

                <div class="col-md-6">
                    <label>Additional Premium</label>
                    <input type="text" class="form_input" />
                </div>

                <div class="col-md-6">
                    <label><b>Total Premium</b></label>
                    <input type="text" class="form_input" />
                </div>


            </div>
        </div>

    </div>

    <hr />

    <h2>Contact Persons Details</h2>

    <div class="row">
        <div class="col-md-3">
            <div class="row form-group">
                <div class="col-md-12">
                    <label>Name</label>
                    <input type="text" class="form_input" />
                </div>
                <div class="col-md-12">
                    <label>Mobile / Landline</label>
                    <input type="text" class="form_input" />
                </div>




            </div>
        </div>

        <div class="col-md-3">
            <div class="row form-group">
                <div class="col-md-12">
                    <label>Designation</label>
                    <input type="text" class="form_input" />
                </div>
                <div class="col-md-12">
                    <label>Payment Option</label>
                    <input type="text" class="form_input" />
                </div>



            </div>
        </div>
        <div class="col-md-3">
            <div class="row form-group">



                <div class="col-md-12">
                    <label>Email</label>
                    <input type="text" class="form_input" />
                </div>

            </div>
        </div>
        <div class="col-md-3">
            <div class="row form-group">

                <div class="col-md-12">
                    <label>Sales Manager</label>
                    <select class="form_input">
                        <option value="">Company 1</option>
                        <option value="">Company 2</option>
                    </select>
                </div>

                <div class="col-md-12">
                    <label>Remarks</label>
                    <input type="text" class="form_input" />
                </div>

            </div>
        </div>

    </div>

    <hr />
    <h2>OPERATION</h2>
    <div class="row">
        <div class="col-md-3">
            <div class="row form-group">
                <div class="col-md-12">
                    <label>Operation Manager</label>
                    <input type="text" class="form_input" />
                </div>

            </div>
        </div>

        <div class="col-md-3">
            <div class="row form-group">

                <div class="col-md-6">
                    <label>Policy No.</label>
                    <input type="text" class="form_input" />
                </div>

                <div class="col-md-6">
                    <label>Endorsement No.</label>
                    <input type="text" class="form_input" />
                </div>




            </div>
        </div>


    </div>

    <hr />
    <h2>FINANCE</h2>
    <div class="row">
        <div class="col-md-3">
            <div class="row form-group">
                <div class="col-md-12">
                    <label>Finance Manager</label>
                    <input type="text" class="form_input" />
                </div>

            </div>
        </div>

        <div class="col-md-3">
            <div class="row form-group">

                <div class="col-md-6">
                    <label>Payment to</label>
                    <select class="form_input">
                        <option value="">CIB</option>
                        <option value="">Insurance Co</option>
                    </select>
                </div>

                <div class="col-md-6">
                    <label>Mode of Payment</label>
                    <select class="form_input">
                        <option value="">Cheque</option>
                        <option value="">Cash</option>
                        <option value="">Bank Transfer</option>
                    </select>

                </div>

            </div>

        </div>


        <div class="table-responsive scroll2 col-md-6">
            <table class="table table-bordered" id="tab_logic">
                <thead>
                    <tr class="grid_heading cheque">
                        <th>Cheque No</th>
                        <th>Cheque Date</th>
                        <th>Bank Name</th>
                        <th>Cheque Amount</th>
                        <th>PDC Date</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>

                    <tr>

                        <td><input type="text" class="form_input" /></td>
                        <td><input type="text" class="form_input" /></td>
                        <td><input type="text" class="form_input" /></td>
                        <td><input type="text" class="form_input" /></td>
                        <td><input type="text" class="form_input" /></td>
                        <td><img src="~/Images/Plus.png" /></td>

                    </tr>




                </tbody>

            </table>
        </div>



    </div>


    <div class="row">
        <hr />
        <div class="col-md-12">
            <button type="button" class="form-button" onclick="Previous()">Previous</button>
            <button type="button" class="form-button right">Save</button>
            <button type="button" class="form-button right" onclick="Exit()">Exit</button>
        </div>

    </div>


</div>

<script>
    function Previous() {
        var url = '@Url.Action("PreviousProposal", "Policy_Endorsement")'
        window.location = url;
    }

</script>

