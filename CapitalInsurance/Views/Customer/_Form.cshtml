<hr />
<h2>Contact Details</h2>
<div class="row">
    <div class="col-md-3">
        <div class="row form-group">
            <div class="col-md-12">
                <label>Name</label>
                @Html.TextBoxFor(m => m.ContactName, new { @class = "form_input" })
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="row form-group">
            <div class="col-md-12">
                <label>Designation</label>
                @Html.TextBoxFor(m => m.Designation, new { @class = "form_input" })
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="row form-group">
            <div class="col-md-6">
                <label>Office No.</label>
                @Html.TextBoxFor(m => m.OfficeNo, new { @class = "form_input" })
            </div>
            <div class="col-md-6">
                <label>Mobile No.</label>
                @Html.TextBoxFor(m => m.MobileNo, new { @class = "form_input" })
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="row form-group">
            <div class="col-md-12">
                <label>Email ID</label>
                @Html.TextBoxFor(m => m.EmailId, new { @class = "form_input" })
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="row form-group">
            <div class="col-md-6">
                <label>State</label>
                @Html.DropDownListFor(m => Model.StateId, (SelectList)ViewBag.State, "Select State", new { @class = "form_input", autocomplete = "off" })
            </div>

            <div class="col-md-6">
                <label>Country</label>
                @Html.DropDownListFor(m => Model.CountryId, (SelectList)ViewBag.Regions, "Select Country", new { @class = "form_input", autocomplete = "off" })
            </div>
        </div>
    </div>
</div>

<hr />
<h2>Billing Address</h2>
<div class="row">
    <div class="col-md-3">
        <div class="row form-group">
            <div class="col-md-12">
                <label>Address 1</label>
                @Html.TextBoxFor(m => m.Address1, new { @class = "form_input" })
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="row form-group">
            <div class="col-md-12">
                <label>Address 2</label>
                @Html.TextBoxFor(m => m.Address2, new { @class = "form_input" })
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="row form-group">
            <div class="col-md-12">
                <label>Address 3</label>
                @Html.TextBoxFor(m => m.Address3, new { @class = "form_input" })
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="row form-group">
            <div class="col-md-6">
                <label>Credit Period</label>
                @Html.TextBoxFor(m => m.CreditPeriod, new { @class = "form_input" })
