@model Capital.Domain.Customer
@{string actionName = HttpContext.Current.Request.RequestContext.RouteData.Values["action"].ToString(); }
<div class="row">
    <div class="col-md-12">
        <div class="row form-group">
            <div class="col-md-3">
                <label>Customer Name</label>
                @Html.HiddenFor(m => m.CusId)
                @Html.TextBoxFor(m => m.CusName, new { @class = "form_input"})
                @Html.ValidationMessageFor(m => m.CusName, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-3">
        <div class="row form-group">
            <div class="col-md-12">
                <label>Customer Short Name</label>
                @Html.TextBoxFor(m => m.CusShortName, new { @class = "form_input half" })
                @Html.ValidationMessageFor(m => m.CusShortName, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-12">
                <label>Customer Category</label>
                @Html.DropDownListFor(m => Model.CusCatId, (SelectList)ViewBag.CustomerCategory, "Select Category", new { @class = "form_input", autocomplete = "off" })
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="row form-group">
            <div class="col-md-12">
                <label>Region</label>
                @Html.DropDownListFor(m => Model.RegionId, (SelectList)ViewBag.Regions, "Select Region", new { @class = "form_input", autocomplete = "off" })
            </div>
            <div class="col-md-6">
                <label>No of Employees</label>
                @Html.TextBoxFor(m => m.EmployeeNo, new { @class = "form_input" })
            </div>
            <div class="col-md-6">
                <label>No of Premises</label>
                @Html.TextBoxFor(m => m.PremisNo, new { @class = "form_input" })
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="row form-group">
            <div class="col-md-12">
                <label>Sales Manager</label>
                @Html.DropDownListFor(m => Model.SalesMgId, (SelectList)ViewBag.SalesManager, "Select Manager", new { @class = "form_input", autocomplete = "off" })
            </div>
        </div>
    </div>
